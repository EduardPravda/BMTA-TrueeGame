<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fillViewport="true"
    tools:context=".ui.GameSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nastavení hry"
            android:textColor="#333333"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velikost hracího pole"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rg_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_4x3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4x3 (12 karet) - Lehké"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_4x4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4x4 (16 karet) - Klasik"
                        android:checked="true"
                        android:padding="8dp"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Typ hry"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rg_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_classic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klasická hra (bez limitu)"
                        android:checked="true"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Časovka (proti času)"
                        android:padding="8dp"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_time_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Časový limit"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <SeekBar
                        android:id="@+id/seekbar_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="180"
                        android:min="0"
                        android:progress="60" />

                    <TextView
                        android:id="@+id/tv_time_value"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="60 s"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_start_game_final"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SPUSTIT HRU"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"/>

    </LinearLayout>
</ScrollView>